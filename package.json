{
  "name": "ts-react-boilerplate",
  "version": "1.0.0",
  "description": "Another basic Typescript, React boilerplate",
  "main": "src/index.tsx",
  "author": "Brendon <frontalspy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run start:app\" \"npm run start:server\"",
    "start:app": "vite --config ./config/vite.config.ts",
    "start:server": "nodemon --esm ./src/server/index.ts",
    "test": "vitest run --config ./config/vitest.config.ts",
    "format": "biome format --write"
  },
  "dependencies": {
    "express": "^5.2.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/express": "^5.0.6",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "jsdom": "^28.0.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-css-modules": "^1.12.0",
    "vitest": "^4.0.18"
  }
}
